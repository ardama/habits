{
    "compilerOptions": {
      "checkJs": true,
      "jsx": "react-jsx",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "@t/*": ["./src/types/*"],
        "@store/*": ["./src/store/*"],
      },
      "resolveJsonModule": true,
      "lib": ["es6", "dom"],
      "noEmit": true,
      "strict": true,
      "allowJs": true,
      "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
  }