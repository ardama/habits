{
  "compilerOptions": {
    "checkJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@component/*": ["./src/components/*"],
      "@s/*": ["./src/store/*"],
      "@type/*": ["./src/types/*"],
      "@/*": ["./src/*"],
    },
    "resolveJsonModule": true,
    "lib": ["es6", "dom"],
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}